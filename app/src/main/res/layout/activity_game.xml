<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:orientation="horizontal"
    android:textAlignment="center"
    android:textDirection="locale"
    tools:context=".GameActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-135dp">


        <com.game.drievka.Playground

            android:id="@+id/imageView2"
            android:layout_width="1087dp"
            android:layout_height="603dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/spinner_background"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/imageButtonRepeat"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:background="@null"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonOK"
            app:srcCompat="@drawable/button_clean_states" />

        <LinearLayout
            android:id="@+id/view2"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/imageButtonRepeat"
            app:layout_constraintStart_toStartOf="@+id/imageButtonOK"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            android:padding="5dp">

            <TextView
                android:id="@+id/point10"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:background="@drawable/style_points"
                android:layout_margin="2dp"
                android:alpha="0.9"/>

            <TextView
                android:id="@+id/point9"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:background="@drawable/style_points"
                android:layout_margin="2dp"
                android:alpha="0.9"/>

            <TextView
                android:id="@+id/point8"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:background="@drawable/style_points"
                android:layout_margin="2dp"
                android:alpha="0.9"/>

            <TextView
                android:id="@+id/point7"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:background="@drawable/style_points"
                android:layout_margin="2dp"
                android:alpha="0.9"/>

            <TextView
                android:id="@+id/point6"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:background="@drawable/style_points"
                android:layout_margin="2dp"
                android:alpha="0.9"/>

            <TextView
                android:id="@+id/point5"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:background="@drawable/style_points"
                android:layout_margin="2dp"
                android:alpha="0.9"/>

            <TextView
                android:id="@+id/point4"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:background="@drawable/style_points"
                android:layout_margin="2dp"
                android:alpha="0.9"/>

            <TextView
                android:id="@+id/point3"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:background="@drawable/style_points"
                android:layout_margin="2dp"
                android:alpha="0.9"/>

            <TextView
                android:id="@+id/point2"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:background="@drawable/style_points"
                android:layout_margin="2dp"
                android:alpha="0.9"/>

            <TextView
                android:id="@+id/point1"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:background="@drawable/style_points"
                android:layout_margin="2dp"
                android:alpha="0.9"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/imageButtonOK"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_marginEnd="16dp"
            android:background="@null"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/imageButtonRepeat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/task"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.067"
            app:layout_constraintVertical_chainStyle="spread_inside"
            app:srcCompat="@drawable/button_ok_blue_states" />

        <ImageButton
            android:id="@+id/imageButtonBack"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="35dp"
            android:background="@null"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toStartOf="@+id/task"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/button_back_states" />

        <com.game.drievka.Task
            android:id="@+id/task"
            android:layout_width="981dp"
            android:layout_height="159dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView2"
            app:layout_constraintEnd_toStartOf="@+id/imageButtonOK"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageButtonBack"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewCloud"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="300dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="300dp"
            android:layout_marginRight="300dp"
            android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:srcCompat="@drawable/cloud"
            android:visibility="gone"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>