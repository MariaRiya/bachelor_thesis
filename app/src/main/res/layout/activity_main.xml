<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:orientation="horizontal"
    tools:context=".MainActivity">


        <ImageButton
            android:id="@+id/imageButtonFirstTask"
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageButtonSecondTask"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.704"
            app:srcCompat="@drawable/button_first_task_states" />

        <ImageButton
            android:id="@+id/imageButtonSecondTask"
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageButtonThirdTask"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageButtonFirstTask"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.876"
            app:srcCompat="@drawable/button_second_task_states" />

        <ImageButton
            android:id="@+id/imageButtonFourthTask"
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageButtonFifthTask"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageButtonThirdTask"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.876"
            app:srcCompat="@drawable/button_fourth_task_states" />

        <ImageButton
            android:id="@+id/imageButtonThirdTask"
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:layout_marginStart="24dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageButtonFourthTask"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageButtonSecondTask"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.704"
            app:srcCompat="@drawable/button_third_task_states" />

        <ImageButton
            android:id="@+id/imageButtonFifthTask"
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageButtonFourthTask"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.704"
            app:srcCompat="@drawable/button_fifth_task_states" />

        <ImageButton
            android:id="@+id/imageButtonSettings"
            android:layout_width="98dp"
            android:layout_height="87dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/imageButtonFifthTask"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/off"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/buttonSettings"
            android:layout_width="98dp"
            android:layout_height="87dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/imageButtonFifthTask"
            app:layout_constraintEnd_toStartOf="@+id/imageButtonSettings"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/button_settings_states" />

        <ImageView
            android:id="@+id/imageButtonTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            app:layout_constraintEnd_toEndOf="@id/imageButtonFourthTask"
            app:layout_constraintStart_toStartOf="@id/imageButtonSecondTask"
            app:layout_constraintTop_toTopOf="@id/buttonSettings"
            app:srcCompat="@drawable/title_states" />


</androidx.constraintlayout.widget.ConstraintLayout>